<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="850.0" prefWidth="1210.0" style="-fx-background-color: #34495e;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.finalproject.controller.TeacherformController">
    <children>
        <Button fx:id="addteacherbutton" layoutX="105.0" layoutY="150.0" mnemonicParsing="false" onAction="#onaddTeacherClick" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: #509CDB; -fx-text-fill: white;" text="Add Teachers">
            <font>
                <Font name="System Bold Italic" size="12.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <TableView fx:id="table" layoutY="200.0" prefHeight="650.0" prefWidth="1210.0" style="-fx-background-color: #D6E0DC;">
            <columns>
                <TableColumn fx:id="name" prefWidth="200.0" text="Name" />
                <TableColumn fx:id="subject" prefWidth="200.0" text="Subject" />
                <TableColumn fx:id="no" prefWidth="200.0" text="Contact no:" />
                <TableColumn fx:id="main" prefWidth="300.0" text="Email" />
                <TableColumn fx:id="gender" prefWidth="200.0" text="Gender" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
